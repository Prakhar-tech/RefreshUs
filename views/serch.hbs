
      <style>
          body {
        margin: 0;
        padding: 0;
        font-family: 'Roboto', sans-serif;
        background-color: black;
        color: white;
      }

	  .bg-dark{
  background: #000000 !important;
}

      </style>
      
     {{#each movies }}
   
	<div class="main_card" >
		<div class="card_left">
			<div class="card_datails">
				<h1>{{movieName}}</h1>
				<div class="card_cat">
					<p class="PG">Hollywood</p>
					<p class="year">2018</p>
					<p class="genre">{{genre}}</p>
					<p class="time">2h 28m</p>
				</div>
				<p class="disc">{{description}}
          {{!-- {{ stripTags (truncate description 90)}} --}}
          </p>
				{{!-- <a href="https://www.imdb.com/title/tt4912910/" target="_blank">Read More</a> --}}
			<div class="social-btn">
        <!-- WATCH TRAILER-->
				<button>
					<i class="fas fa-play"></i> SEE TRAILER
				</button>
				<!-- GET-->
				<button>
					<i class="fas fa-download"></i> DOWNLOAD
				</button>
				<!--USERS RATINGS-->
				<button>
					<i class="fas fa-star"></i> {{rating}}
				</button>
				<!--BOOKMARK-->
				<button onclick="getFav(this)" value="{{_id}}" name="{{email}}" style="background-color: #e50914;" id="x">
          <i class="fas fa-heart"></i>
				</button>
			</div>	
			</div>
		</div>
		<div class="card_right">
			<div class="img_container">
				<img src="{{coverImage}}" alt="">
				</div>
				<div class="play_btn">
					<a href="https://www.imdb.com/title/tt4912910/" target="_blank">
						<i class="fas fa-play-circle"></i>
					</a>
				</div>
			</div>
		</div>
    
    {{/each}}
